rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Leagues: read-only for everyone
    match /leagues/{leagueId} {
      allow read: if true;
      allow write: if false;
    }

    // Teams: read-only for everyone
    match /teams/{teamId} {
      allow read: if true;
      allow write: if false;
    }
    match /teams_v2/{teamId} {
      allow read: if true;
      allow write: if false;
    }

    // User saves (career mode)
    match /saves/{saveId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    match /save_slots/{slotId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Contrarreloj saves
    match /contrarreloj_saves/{saveId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // ProManager saves
    match /promanager_saves/{saveId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // User profiles (language, settings)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Editions (approved packs - public read)
    match /editions/{editionId} {
      allow read: if true;
      allow write: if false;
    }

    // Editions pending review (user submissions)
    match /editions_pending/{pendingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Ranked queue
    match /ranked_queue/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Ranked matches
    match /ranked_matches/{matchId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false;
    }

    // Ranked players (profiles/leaderboard)
    match /ranked_players/{playerId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == playerId;
      allow delete: if false;
    }

    // Default: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
