rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Leagues: read-only for everyone, write only from admin/scripts
    match /leagues/{leagueId} {
      allow read: if true;
      allow write: if false;
    }
    match /leagues_v2/{leagueId} {
      allow read: if true;
      allow write: if false;
    }

    // Teams: read-only for everyone, write only from admin/scripts
    match /teams/{teamId} {
      allow read: if true;
      allow write: if false;
    }
    match /teams_v2/{teamId} {
      allow read: if true;
      allow write: if false;
    }

    // Game saves: authenticated users can manage their own saves
    match /saves/{saveId} {
      allow read, write: if request.auth != null;
    }
    match /save_slots/{docId} {
      allow read, write: if request.auth != null;
    }

    // ProManager saves
    match /promanager_saves/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User saves: only own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/{sub=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Contrarreloj saves: only own data
    match /contrarreloj_saves/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Contrarreloj ranking: authenticated can read all, write own
    match /contrarreloj_ranking/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // === RANKED 1v1 ===

    // Ranked queue: authenticated users can manage their own entry
    match /ranked_queue/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null; // Allow removing opponent from queue on match creation
    }

    // Ranked matches: participants can read/write
    match /ranked_matches/{matchId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }

    // Ranked players: own profile read/write, others read
    match /ranked_players/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null; // Allow LP updates from match results
    }

    // Editions
    match /editions/{docId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // Default: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
