rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Leagues: read-only for everyone, write only from admin/scripts
    match /leagues/{leagueId} {
      allow read: if true;
      allow write: if false;
    }

    // Teams: read-only for everyone, write only from admin/scripts
    match /teams/{teamId} {
      allow read: if true;
      allow write: if false;
    }

    // Default: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
